if (!pnt) var pnt = {};
if (!pnt.themeweb) pnt.themeweb = {};
if (!pnt.themeweb.submenu) pnt.themeweb.submenu = {};

pnt.themeweb.submenu.buttonTargetModal = null;
pnt.themeweb.submenu.maxTabindex = 0;

